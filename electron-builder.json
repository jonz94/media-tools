{
  "productName": "media-tools",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!.cspell.json",
    "!.editorconfig",
    "!**/*.ts",
    "!angular.json",
    "!LICENSE",
    "!package-lock.json",
    "!package.json",
    "!src/",
    "!tailwind.config.js",
    "!transloco.config.js",
    "!tsconfig.json",
    "!tsconfig.serve.json",
    "!tslint.json",
    "!webpack.config.js"
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": ["nsis"]
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage", "deb", "rpm"]
  }
}
